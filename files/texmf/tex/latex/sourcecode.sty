\newcommand{\code}[1]{
    \textbf{\texttt{#1}}
}

\newcommand{\uri}[1]{
    \large\code{\underline{\href{#1}{#1}}}\normalsize
}

\newcommand{\sourcefile}[2]{
    \begin{center}
        \large\textbf{\underline{{\code{#2}}}}\normalsize
    \end{center}
    \inputminted{#1}{#2}
}

\newcommand{\SourceFile}[2]{
    \subsection{\large{\code{#2}\normalsize}}
    \inputminted{#1}{#2}
    \newpage
}


